{
  "name": "ub-ecosystem",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:analyze": "ANALYZE=true turbo run build",
    "lint": "turbo run lint",
    "lint:css": "stylelint \"**/*.css\" --fix",
    "lint:js": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:js:fix": "eslint --ext .js,.jsx,.ts,.tsx . --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,css,json,md}\"",
    "test": "turbo run test",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "clean": "turbo run clean",
    "prepare": "husky",
    "type-check": "tsc --build --force",
    "type-check:watch": "tsc --build --watch",
    "storybook": "pnpm --filter=@ub-ecosystem/state-management build && storybook dev -p 6006",
    "build-storybook": "pnpm --filter=@ub-ecosystem/state-management build && pnpm --filter=@ub-ecosystem/ui build && storybook build"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "tsc-files --noEmit"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@storybook/addon-a11y": "^7.6.17",
    "@storybook/addon-essentials": "^7.6.17",
    "@storybook/addon-interactions": "^7.6.17",
    "@storybook/addon-links": "^7.6.17",
    "@storybook/blocks": "^7.6.17",
    "@storybook/react": "^7.6.17",
    "@storybook/react-webpack5": "^7.6.17",
    "@storybook/testing-library": "^0.2.2",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.11",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "storybook": "^7.6.17",
    "stylelint": "^16.18.0",
    "stylelint-config-standard": "^38.0.0",
    "tsc-files": "^1.1.4",
    "turbo": "^1.10.0",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@8.15.5"
}
