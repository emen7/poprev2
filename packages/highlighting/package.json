{
  "name": "@ub/highlighting",
  "version": "0.1.0",
  "description": "Highlighting system for the Urantia Book reader",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npx tsc && cross-env NODE_ENV=production copyfiles -u 1 \"src/styles/**/*.css\" dist/",
    "dev": "npx tsc --watch",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest --passWithNoTests"
  },
  "keywords": [
    "highlighting",
    "urantia",
    "reader"
  ],
  "author": "UB Team",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "rimraf": "^5.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
